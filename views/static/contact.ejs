<div class="row delimiter">
  <div class="col-md-6">
    <h4 class="uppercase">Contact us</h4>
  </div>
  <div class="col-sm-6 hidden-xs text-right">
    <ol class="breadcrumb">
      <li>
        <a href="/">Home</a>
      </li>
      <li>Contact</li>
    </ol>
  </div>
</div>

<div class="row">
  <div class="col-md-6">

    <form class="bottom-30" id="contactForm" method="post" novalidate>
      <div class="form-group">
        <label for="name">Name</label>
        <input id="name" class="form-control" type="text" name="name" placeholder="Enter your name"
               value="<%- req.session.user ? req.session.user.name : '' %>">
      </div>
      <div class="form-group">
        <label class="control-label" for="email">Email</label>
        <input id="email" class="form-control" type="email" name="email" placeholder="Enter your email"
               value="<%- req.session.user ? req.session.user.email : ''%>">
      </div>
      <div class="form-group">
        <label class="control-label" for="message">Message</label>
        <textarea id="message" class="form-control" name="message" placeholder="Enter your message"></textarea>
      </div>
      <input type='hidden' name='_csrf' value='<%= _csrf %>'>
      <button id="contactFormSubmit" class="btn btn-primary btn-lg" type="submit">Send</button>
    </form>
  </div>
</div>

<table id="messages" data-toggle="table" data-url="/contacts/answered" data-pagination="true"
       data-side-pagination="server" data-sortable="true">
  <thead>
  <tr>
    <th data-field="name" data-sortable="true">name</th>
    <th data-field="email" data-sortable="true">email</th>
    <th data-field="message" data-sortable="true" data-editable="true">message</th>
    <th data-field="answer" data-sortable="true" data-editable="true">answer</th>
    <th data-field="createdAt" data-sortable="true">date of creation</th>
  </tr>
  </thead>
</table>
<script src="/myjs/contactFormController.js"></script>
