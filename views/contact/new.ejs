<%- partial('../partials/flash') %>
<div class="row delimiter">
  <div class="col-md-6">
    <h4 class="uppercase">Contact us</h4>
  </div>
  <div class="col-sm-6 hidden-xs text-right">
    <ol class="breadcrumb">
      <li>
        <a href="/">Home</a>
      </li>
      <li>Contact</li>
    </ol>
  </div>
</div>

<div class="row">
  <div class="col-md-6">

    <form class="bottom-30" id="contactForm" method="post" novalidate action="/contacts">
      <div class="form-group">
        <label for="name">Name</label>
        <input id="name" class="form-control" type="text" name="name" placeholder="Enter your name"
               value="<%- req.session.user ? req.session.user.name : '' %>">
      </div>
      <div class="form-group">
        <label class="control-label" for="email">Email</label>
        <input id="email" class="form-control" type="email" name="email" placeholder="Enter your email"
               value="<%- req.session.user ? req.session.user.email : ''%>">
      </div>
      <div class="form-group">
        <label class="control-label" for="message">Message</label>
        <textarea id="message" class="form-control" name="message" placeholder="Enter your message"></textarea>
      </div>
      <button id="contactFormSubmit" class="btn btn-primary btn-lg" type="submit">Send</button>
    </form>
  </div>
</div>

<table class="table">
  <thead>
  <tr>
    <th>name</th>
    <th>email</th>
    <th>message</th>
    <th>answer</th>
    <th>date of creation</th>
  </tr>
  </thead>
  <tbody id="contacts">
  <% for (var i = 0; i < contacts.length; i++) { %>
  <tr>
    <td><%- contacts[i].name %></td>
    <td><%- contacts[i].email %></td>
    <td><%- contacts[i].message %></td>
    <td><%- contacts[i].answer %></td>
    <td><%- _moment(contacts[i].createdAt).format('DD.MM.YYYY HH:mm:ss') %></td>
  </tr>
  <% } %>
  </tbody>
</table>
<%- partial('../partials/pagination') %>
<script src="/myjs/contactFormController.js"></script>
<script src="/myjs/pages/contactsController.js"></script>
