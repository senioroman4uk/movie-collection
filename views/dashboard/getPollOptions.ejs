<form class="form-inline" action="/polls/<%- pollId %>/options/create" method="post">
  <input type="hidden" name="poll" value="<%- pollId %>">
  <label for="text">Option text</label>
  <input class="form-control" type="text" name="text" id="text">
  <button class="btn btn-primary" type="submit">Create option</button>
</form>
<% if (rows.length > 0) { %>
<table class="table table-bordered">
  <thead>
  <tr>
    <th class="th">Id</th>
    <th class="th">Text</th>
    <th class="th">Votes for</th>
  </tr>
  </thead>
  <tbody>
  <% for(var i = 0; i < rows.length; i++) { %>
  <tr>
    <% for(var j = 0; j < properties.length; j++) { %>
    <td>
      <%- rows[i][properties[j]] %>
    </td>
    <% } %>
    <td>
      <a href="/dashboard/poll-options/destroy/<%- rows[i].id %>" class="btn btn-sm btn-danger">
        <span class="glyphicon glyphicon-erase"></span>
      </a>
    </td>
  </tr>
  <% } %>
  </tbody>
</table>
<% } else { %>
<h2 class="alert-warning">There are no options yet</h2>
<% } %>
