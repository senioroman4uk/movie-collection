
<% if (rows.length > 0) { %>
<table class="table table-bordered">
  <thead>
  <tr>
    <!--<th class="th">Id</th>-->
    <th class="th">Author</th>
    <th class="th">IP</th>
    <th class="th">Text</th>
    <th class="th">Created at</th>
  </tr>
  </thead>
  <tbody>
  <% for(var i = 0; i < rows.length; i++) { %>
  <tr>
    <td><%- rows[i]['author'].name%></td>
    <% for(var j = 0; j < properties.length; j++) { %>
    <td>
      <%- rows[i][properties[j]] %>
    </td>
    <% } %>
    <td>
      <a href="/comments/destroy/<%- rows[i].id %>" class="btn btn-sm btn-danger">
        <span class="glyphicon glyphicon-erase"></span>
      </a>
    </td>
  </tr>
  <% } %>
  </tbody>
</table>
<%- partial('../partials/pagination') %>
<% } else { %>
<h2 class="alert-warning">There are no comments yet</h2>
<% } %>
