<article>
  <div class="row padding-top-15 padding-bottom-15">
    <%- partial('../partials/actor') %>
  </div>
  <div class="row padding-top-15 padding-bottom-15">
    <div class="col-md-9">
      <h2>Biography:</h2>

      <p><%- actor.biography %></p>
      <% if (actor.movies && actor.movies.length > 0) { %>
      <h2>Filmography</h2>
      <table class="table table-striped table-responsive table-hover">
        <% for(var i = 0; i < actor.movies.length; i++) { %>
        <tr>
          <td class="col-md-1"><img src="/images/movies/<%- actor.movies[i].cover %>" width="40"></td>
          <td class="col-md-2"><%- actor.movies[i].name %></td>
          <td class="col-md-1"><%- actor.movies[i].year %></td>
          <td class="col-md-2"></td>
        </tr>
        <% } %>
      </table>
      <% } %>
    </div>
  </div>
</article>

<script type="text/javascript" src="/myjs/pages/findOneController.js"></script>
