<article xmlns="http://www.w3.org/1999/html">
  <div class="row padding-top-15 padding-bottom-15">
    <%- partial('../partials/movie') %>
  </div>
  <div class="row padding-top-15 padding-bottom-15">
    <div class="col-md-9">
      <section>
        <h2>Storyline:</h2>
        <p><%- movie.storyLine %></p>
      </section>

      <% if (movie.actors && movie.actors.length > 0) { %>
      <section>
        <h2>Cast</h2>
        <table class="table table-striped table-responsive table-hover">
          <% for(var i = 0; i < movie.actors.length; i++) { %>
          <tr>
            <td class="col-md-1">
              <img class="img-rounded" src="/images/actors/<%- movie.actors[i].cover %>" width="40"
                   alt="<%- [movie.actors[i].firstName, movie.actors[i].middleName, movie.actors[i].lastName].join(' ') + ' photo' %>">
            </td>
            <td class="col-md-3"><%- movie.actors[i].getName() %></td>
            <td></td>
            <td></td>
          </tr>
          <% } %>
        </table>
      </section>
      <% } %>
    </div>
    <div class="col-md-3">

    </div>
  </div>
  <%- partial('../partials/comments') %>
</article>
