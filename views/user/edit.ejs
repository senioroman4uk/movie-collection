<form method="post" enctype="multipart/form-data" action="/users/update">
  <%- partial('../partials/flash') %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group hidden">
        <input type="hidden" name="id" class="form-control" value="<%- req.session.user.id %>">
      </div>
      <div class="form-group">
        <label>Name</label>
        <input type="text" placeholder="Enter your name" name="name" value="<%- user.name %>" class="form-control">
      </div>
      <div class="form-group">
        <label>Email</label>
        <input type="email" placeholder="Enter your email" name="year" value="<%- user.email %>" class="form-control">
      </div>
      <div class="form-group">
        <label>About
          <textarea class="form-control" name="about"><%- user.about %></textarea>
        </label>
      </div>
      <div class="form-group">
        <label>Avatar:<input type="file" name="cover"></label>
      </div>
      <div class="for-errors"></div>
      <button id="save" type="submit" class="btn btn-primary">Save</button>
    </div>
  </div>
</form>
