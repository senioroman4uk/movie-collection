  <div class="col-md-3">
    <img class="img-rounded img-responsive" src="/images/movies/<%- movie.cover %>" alt="<%- movie.name + ' Poster'%>">
  </div>
  <div class="col-md-6">
    <h1>
      <%- movie.name %>
      (<a href="/movies?year=<%- movie.year %>"><%- movie.year %></a>)
      <!--<a href='/movie?where={"year": <%- movie.year %>}'>(<%- movie.year %>)</a>-->
    </h1>
    <p>
      <%- movie.length %> min |
      <% for (var i = 0; i < movie.genres.length; i++) { %>
      <a
        href="/movies?genre=<%- movie.genres[i].name.toLowerCase() %>"><%- movie.genres[i].name %></a><%- i + 1 !== movie.genres.length ? ',' : '' %>
      <% } %>
    </p>
    <div class="progress">
      <div class="progress-bar" role="progressbar" aria-valuenow="<%- movie.rating %>" style="width: <%- movie.rating * 10 + '%' %>;"
           aria-valuemin="0" aria-valuemax="10">
      </div>
    </div>
    <p><%- movie.description %></p>
    <% if (typeof(hideReadMore) === 'undefined' || !hideReadMore) {%>
    <a class="btn btn-large btn-primary" href="/movies/<%- movie.link %>">Read more</a>
    <% }%>
    <span class="pull-right"> Created at:
     <time datetime="<%- _moment(movie.createdAt).format('DD.MM.YYYY HH:mm:ss') %>">
       <%- _moment(movie.createdAt).format('DD.MM.YYYY HH:mm:ss') %>
     </time>
    </span>
  </div>

